---
const { currentPath = '/' } = Astro.props;

const links = [
  { href: '/', label: '首页' },
  { href: '/article/', label: '文章' },
  { href: '/tools/', label: '工具' },
];

const isActive = (href: string) => {
  if (href === '/') {
    return currentPath === '/';
  }
  return currentPath.startsWith(href);
};
---

<nav>
  <div class="nav-container">
    <a href="/" class="logo">周兆坤 | Eric Zhou</a>
    <ul class="nav-links">
      {links.map(({ href, label }) => (
        <li>
          <a href={href} class={isActive(href) ? 'active' : undefined}>{label}</a>
        </li>
      ))}
    </ul>
  </div>
</nav>

